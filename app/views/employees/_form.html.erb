<%= simple_form_for form, as: :employees, url: url do |f| %>
  <div class="ibox">
    <div class="ibox-content">
      <%= f.input :name, input_html: { class: 'form-control' }, label_html: { class: 'form-label' } %>
      <%= f.input :active, as: :boolean, label: 'Active' %>
      <%= f.input :department_id, label: 'Department',
                collection: department_collection,
                prompt: false,
                label_html: { class: 'form-label' }, input_html: { class: 'form-input' } %>

      <%= f.submit 'Save', class: 'btn btn-primary' %>
      <%= link_to "Back", employees_path, class: "btn btn-info" %>
    </div>
  </div>
<% end %>
