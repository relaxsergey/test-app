<div class="btn-group">
  <%= link_to(edit_employee_path(employee.id),
              class: 'btn btn-white btn-xs') do %>
      <%= fa_icon('pencil') %>
      Edit
  <% end %>

  <%= link_to employee_path(employee.id),
              class: 'btn btn-white btn-xs',
              data: {confirm: 'Are you sure?', method: :delete} do %>
      <%= fa_icon('trash') %>
      Delete
  <% end %>
</div>
